<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/fragment"
        android:gravity="center"
        android:visibility="gone">

        <fragment
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/asd"
            android:name="com.example.sahin.learnenglishwords.TebrikFragment" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/content"
        android:gravity="center"
        android:visibility="visible"
        android:weightSum="1">

        <TextView
            android:text="TextView"
            android:textStyle="bold"
            android:textSize="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:id="@+id/tvKelime"
            android:layout_margin="25dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Name"
            android:ems="10"
            android:id="@+id/etCevap"
            android:gravity="center_horizontal"
            android:layout_margin="25dp" />

        <Button
            android:text="DOĞRU MU / IS IT TRUE ?"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnSorgula"
            android:layout_marginTop="25dp" />

        <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvHata"
            android:gravity="center_horizontal" />

        <Button
            android:text="GEÇ / SKIP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:id="@+id/btnGec"
            android:layout_weight="0.02" />
    </LinearLayout>


</LinearLayout>